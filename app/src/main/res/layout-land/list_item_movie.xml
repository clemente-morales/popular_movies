<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movieThumbailImageView"
        android:layout_width="130dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/movieTitleLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movieThumbailImageView"
        android:text="@string/movieTitleLabel"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/movieTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movieTitleLabelTextView" />


    <TextView
        android:id="@+id/movieReleaseLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieTitleLabelTextView"
        android:layout_toRightOf="@id/movieThumbailImageView"
        android:text="@string/movieReleaseDateLabel"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/movieReleaseDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieTitleLabelTextView"
        android:layout_toRightOf="@id/movieReleaseLabelTextView" />

    <RatingBar
        android:id="@+id/movieRatingBar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieReleaseLabelTextView"
        android:layout_toRightOf="@id/movieThumbailImageView"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/movieSynopsisTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieThumbailImageView"
        android:maxLines="3"
        android:minLines="3" />
</RelativeLayout>
