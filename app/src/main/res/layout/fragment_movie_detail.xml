<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movieTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#009688"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/movieThumbailImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieTitleTextView"
                android:padding="10dp" />

            <TextView
                android:id="@+id/movieReleaseLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieTitleTextView"
                android:layout_toRightOf="@id/movieThumbailImageView"
                android:text="@string/movieReleaseDateLabel"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movieReleaseDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieTitleTextView"
                android:layout_toRightOf="@id/movieReleaseLabelTextView" />

            <RatingBar
                android:id="@+id/movieRatingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieReleaseLabelTextView"
                android:layout_toRightOf="@id/movieThumbailImageView"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1" />

            <Button
                android:id="@+id/markAsFavoriteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/movieThumbailImageView"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/movieThumbailImageView"
                android:background="#009688"
                android:text="@string/movieMarkAsFavoriteButton" />

            <TextView
                android:id="@+id/movieSynopsisTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieThumbailImageView" />
        </RelativeLayout>

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/videosTextViewLabel" />

        <ListView
            android:id="@+id/videosListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reviewsTextViewLabel" />

        <ListView
            android:id="@+id/reviewsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>